<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorListContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="13dp">

  <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        app:cardElevation="1dp">

    <ImageView
        android:id="@+id/list_ColorSquare"
        android:layout_width="150dp"
        android:layout_height="150dp" />
  </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_margin"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/moreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/ic_more"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/list_ColorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="色の名前"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/list_ColorMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:hint="色のメモ"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/list_ColorCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:hint="カラーコード"
            android:textSize="@dimen/normal_text" />

        <TextView
            android:id="@+id/listEditDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:hint="yyyy:mm:dd(最終更新)"
            android:textSize="@dimen/normal_text"
            android:gravity="end" />

    </LinearLayout>


</LinearLayout>